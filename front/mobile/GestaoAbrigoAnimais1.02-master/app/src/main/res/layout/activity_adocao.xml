<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdocaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formulário de Pré-Adoção"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados do Candidato"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_adotante_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_adotante_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone (WhatsApp)"
            android:inputType="phone"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_adotante_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condição de Moradia"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_adotante_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço Completo"
            android:inputType="textPostalAddress"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Moradia:"
            android:textSize="16sp"/>

        <RadioGroup
            android:id="@+id/rg_tipo_moradia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/rb_casa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casa" />
            <RadioButton
                android:id="@+id/rb_apartamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartamento"
                android:layout_marginStart="16dp" />
        </RadioGroup>


        <CheckBox
            android:id="@+id/cb_tem_outros_animais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Já possui outros animais de estimação?"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cb_possui_tela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Possui telas/grades de segurança nas janelas?"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/et_intencao_adocao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Animal que Deseja Adotar"
            android:inputType="text"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_enviar_adocao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENVIAR SOLICITAÇÃO DE ADOÇÃO"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>
</ScrollView>